<div class="btn-group">
  <a href="/offers/<%= id %>" class="btn btn-default btn-sm" title="Show">
    <span class="glyphicon glyphicon-eye-open"></span>
  </a>
  <a href="/offers/<%= id %>/edit" class="btn btn-default btn-sm" title="Edit">
    <span class="glyphicon glyphicon-edit"></span>
  </a>
  <a href="/offers/<%= id %>" class="btn btn-default btn-sm" title="Destroy"
      data-method="delete" data-confirm="Are you sure?">
    <span class="glyphicon glyphicon-trash"></span>
  </a>
</div>
